@model IEnumerable<CatWhiteboard.ViewModels.DashViewModel>


@{
    ViewData["Title"] = "Index";
}

<h4>Onboarding</h4>

<div class="row mb-2">
    <div class="col-md-6 form-inline">
        <div class="form-group">
            @*<button id="newCapexBtnId" type="button" class="btn btn-outline-primary btn-sm">New Request</button>*@
            <a asp-action="Create" asp-controller="Request" class="btn btn-outline-primary btn-sm">New Request</a>
        </div>
    </div>
</div>
@*<input id="userCode" type="hidden" asp-for="LoggedInUserCode" />
    <input id="userName" type="hidden" asp-for="LoggedInUserName" />
    <input id="obof" type="hidden" asp-for="IsOnBehalfOf" />*@

<table id="dashboardTblId" class="table table-striped table-bordered mt-1" style="width:100%">
    <thead>
        <tr>
            <th style="width: 10%">
                Reference
            </th>
            <th style="width: 30%">
                User
            </th>
            <th style="width: 10%">
                Date Requested
            </th>
            <th style="width: 10%">
                Start Date
            </th>

            <th style="width: 10%">
                Status
            </th>
            <th style="width: 10%">

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Reference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateRequestedString)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDateString)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <div class="btn-group" role="group">
                        <button id="btnGroupPatient" type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Action
                        </button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupPatient">
                            <a class=" dropdown-item editPatient"  href="#">Edit Request</a>
                            <a class=" dropdown-item deletePatient"  href="#">Delete Request</a>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/select/1.3.0/js/dataTables.select.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/1.5.6/js/dataTables.buttons.min.js"></script>

    <script src="~/js/bootstable.js"></script>
    <script type="text/javascript" src="~/js/HomeIndex.js"></script>


}
