<h3>New Request</h3>
<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item"><a href="#details" class="nav-link active" role="tab" data-toggle="tab" aria-controls="details" aria-selected="true">Details</a></li>
    <li class="nav-item"><a href="#hardware" role="tab" class="nav-link" data-toggle="tab" aria-controls="hardware" aria-selected="false">Hardware/Equipment</a></li>
    <li class="nav-item"><a href="#apps" role="tab" class="nav-link" data-toggle="tab" aria-controls="apps" aria-selected="false">Applications</a></li>
    <li class="nav-item"><a href="#access" role="tab" class="nav-link" data-toggle="tab" aria-controls="access" aria-selected="false">Access</a></li>
</ul>

<div class="tab-content">
    <div class="tab-pane active" id="details">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Full Name</label>
                    <input id="capexNameId" class="form-control" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Preferred Name</label>
                    <input id="capexNameId" class="form-control" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Role</label>
                    <select id="baCodeId" class="form-control">
                        <option value="0">Select ...</option>
                        <option value="0">SMO</option>
                        <option value="0">Nurse</option>
                        <option value="0">Deveoper</option>
                        <option value="0">BA</option>
                    </select>
                </div>
            </div>
        </div>

    </div>
    <div class="tab-pane" id="hardware">
    </div>
    <div class="tab-pane" id="apps">
        <br />
        <form action="CreateRequestApps" method="post">
            <div class="row">
                <div class="col-md-4">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="customCheck1">
                        <label class="custom-control-label" for="customCheck1">Application 1</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="customCheck2">
                        <label class="custom-control-label" for="customCheck2">Application 2</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="customCheck3">
                        <label class="custom-control-label" for="customCheck3">Application 3</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="customCheck4">
                        <label class="custom-control-label" for="customCheck4">Application 4</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="customCheck5">
                        <label class="custom-control-label" for="customCheck5">Application 5</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="customCheck6">
                        <label class="custom-control-label" for="customCheck6">Application 6</label>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="tab-pane" id="access">
    </div>
</div>


