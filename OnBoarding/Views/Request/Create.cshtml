@model OnBoarding.ViewModels.OnboardRequestViewModel

@{
    ViewData["Title"] = "View";
}

<h4>New Request</h4>
<div class="container">
    <div class="stepwizard col-md-offset-3">
        <div class="stepwizard-row setup-panel">
            <div class="stepwizard-step">
                <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
                <p>Details</p>
            </div>
            <div class="stepwizard-step">
                <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
                <p>Hardware</p>
            </div>
            <div class="stepwizard-step">
                <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
                <p>Applications</p>
            </div>
            <div class="stepwizard-step">
                <a href="#step-4" type="button" class="btn btn-default btn-circle" disabled="disabled">4</a>
                <p>Other</p>
            </div>
        </div>
    </div>
    <form role="form" action="" method="post">
        <div class="row setup-content" id="step-1">
            <div class="col-lg-12">
                <h4>User and Role Details</h4>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="control-label">User's First Name</label>
                            <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter First Name">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="control-label">User's Family Name</label>
                            <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter Last Name">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="control-label">User's Preferred Name</label>
                            <input maxlength="100" type="text" class="form-control" placeholder="Enter Preferred Name">
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            <label class="control-label">Medical Council/CPN</label>
                            <input maxlength="100" type="text" class="form-control" placeholder="Enter CPN">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="control-label">Role</label>
                            <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter Role">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="control-label">Department</label>
                            <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter Department">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="control-label">Location</label>
                            <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter Location">
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            <label class="control-label">Vacancy Number</label>
                            <input maxlength="100" type="text" class="form-control" placeholder="Enter Vacancy">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="control-label">Start Date</label>
                            <div class="input-group date" id="startDateId" data-target-input="nearest">
                                <input id="newScanDateId" type="text" class="form-control datetimepicker-input" data-target="#startDateId" />
                                <div class="input-group-append" data-target="#startDateId" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="control-label">End Date</label>
                            <div class="input-group date" id="endDateId" data-target-input="nearest">
                                <input id="newScanDateId" type="text" class="form-control datetimepicker-input" data-target="#endDateId" />
                                <div class="input-group-append" data-target="#endDateId" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-2">
                        <div class="form-group">
                            <label class="control-label">Phone Ext.</label>
                            <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter Phone">
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            <label class="control-label">Cell Phone</label>
                            <input maxlength="100" type="text" class="form-control" placeholder="Enter Cell">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="control-label">Email</label>
                            <input maxlength="100" type="text" class="form-control" placeholder="Enter Email">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <button class="btn btn-outline-primary btn-sm" type="button">Lookup Manager</button>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="control-label">None selected</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <button class="btn btn-outline-primary btn-sm" type="button">Lookup Supervisor</button>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="control-label">None selected</label>
                        </div>
                    </div>
                </div>
                <hr />
                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
            </div>
        </div>
        <div class="row setup-content" id="step-2">
            <div class="col-lg-12">
                <h4>Hardware/Equipment Needs</h4>
                <div class="row">
                    <div class="col-lg-2">
                        <div class="form-group">
                            <label class="control-label">Laptop</label>
                            <select id="diagnosisDdlId" class="form-control" asp-items="@ViewBag.NoneNewExisting">
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            <label class="control-label">PC</label>
                            <select id="diagnosisDdlId" class="form-control" asp-items="@ViewBag.NoneNewExisting">
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <label class="control-label">Cell Phone</label><br />
                        <select id="diagnosisDdlId" class="form-control" asp-items="@ViewBag.NoneNewExisting">
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <label class="control-label">Desk Phone</label><br />
                        <select id="diagnosisDdlId" class="form-control" asp-items="@ViewBag.NoneNewExisting">
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <button class="btn btn-outline-primary btn-sm" type="button">Select Cost Centre Code</button>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="control-label">None selected</label>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-3">
                        <label class="control-label h5">Remote Access</label>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> VMWare View
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> LaptopUser
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <label class="control-label h5">Internet Access</label>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> Allow Internet Access
                            </label>
                        </div>
                    </div>
                </div>
                <hr />
                <button class="btn btn-primary prevBtn btn-lg pull-left" type="button">Previous</button>
                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
            </div>
        </div>
        <div class="row setup-content" id="step-3">
            <div class="col-lg-12">
                <h4>Application Access</h4>
                <h5>Clinical</h5>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group form-check">
                            <label class="form-check-label"><input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> HCS </label>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group form-check">
                            <label class="form-check-label"><input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> SI PICS </label>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group form-check">
                            <label class="form-check-label"><input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> MH Dashboard </label>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group form-check">
                            <label class="form-check-label"><input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> TMS </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group form-check">
                            <label class="form-check-label"><input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> Aortic </label>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group form-check">
                            <label class="form-check-label"><input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> EDaaG </label>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group form-check">
                            <label class="form-check-label"><input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> Titanium </label>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group form-check">
                            <label class="form-check-label"><input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> Eclair </label>
                        </div>
                    </div>
                </div>
                <hr />
                <h5>Other</h5>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group form-check">
                            <label class="form-check-label"><input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> Actor </label>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group form-check">
                            <label class="form-check-label"><input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> Winscribe </label>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group form-check">
                            <label class="form-check-label"><input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> 3M Code </label>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group form-check">
                            <label class="form-check-label"><input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> Safety1st </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group form-check">
                            <label class="form-check-label"><input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> TechOne </label>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group form-check">
                            <label class="form-check-label"><input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> EDaaG </label>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group form-check">
                            <label class="form-check-label"><input id="isMaoriId" class="form-check-input" asp-for="NewLaptop" /> Trackit </label>
                        </div>
                    </div>

                </div>
                <button class="btn btn-primary prevBtn btn-lg pull-left" type="button">Previous</button>
                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
            </div>
        </div>
        <div class="row setup-content" id="step-4">
            <div class="col-lg-12">
                <h4>Other items</h4>
                <a id="btnAddItem" class="btn btn-outline-primary btn-sm">Add Item</a>
                <table id="itemTblId" class="table table-striped table-bordered mt-1" style="width:100%">
                    <thead>
                        <tr>

                            <th width="12%">
                                Category
                            </th>
                            <th width="12%">
                                Fulfiller
                            </th>
                            <th width="66%">
                                Description
                            </th>
                            <th width="10%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                Hardware
                            </td>
                            <td>
                                IT
                            </td>
                            <td>
                                Headphone set
                            </td>
                            <td>
                                <a asp-action="Edit" class="icon-link doEdit mr-2" asp-route-tenant="0" asp-route-id="0"><i class="fa fa-edit"></i></a>
                                <a asp-action="Edit" class="icon-link doEdit mr-2" asp-route-tenant="0" asp-route-id="0"><i class="fa fa-trash-o"></i></a>
                            </td>
                        </tr>
